<idea-plugin>
  <!-- https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
  <id>org.example.pppurple.manually-select-opened-file</id>
  <name>Manually Select Opened File</name>
  <change-notes>Initial release of the plugin.</change-notes>
  <version>1.0.0</version>
  <vendor url="https://github.com/pppurple">pppurple</vendor>

  <description><![CDATA[
    <h1>Manually Select Opened File</h1>
    <p>Manually select opened file without focusing on the project view.</p>
    <h2>Usage</h2>
    <ol>
      <li>Install the plugin</li>
      <li>Default keymap is <code>Command + Ctrl + S</code> (on Windows <code>Shift + Ctrl + S</code>)</li>
    </ol>
    ]]></description>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <!-- https://plugins.jetbrains.com/docs/intellij/build-number-ranges.html?from=jetbrains.org -->
  <!-- defined in build.gradle.kts -->
  <!-- <idea-version since-build="201" /> -->

  <extensions defaultExtensionNs="com.intellij">
  </extensions>

  <actions>
    <action id="pppurple.ManuallySelectOpenedFileAction" class="pppurple.ManuallySelectOpenedFileAction"
            text="Manually Select Opened File"
            description="Manually select opened file without focusing on the project view.">
      <add-to-group group-id="FileChooser" anchor="last" />
      <!-- keymaps are defined as constants in the com.intellij.openapi.keymap.KeymapManager -->
      <!-- https://plugins.jetbrains.com/docs/intellij/basic-action-system.html#action-declaration-reference -->
      <keyboard-shortcut keymap="$default" first-keystroke="shift control S" />
      <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta control S" />
    </action>
  </actions>
</idea-plugin>
